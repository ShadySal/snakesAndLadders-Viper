<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="MainPane" prefHeight="800.0" prefWidth="800.0" styleClass="root" stylesheets="@../src/CssStyles/initializeGameStyle.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.snakesandladdersviper.Controller.InitializeGame">
   <top>
      <HBox alignment="TOP_LEFT" spacing="20" style="-fx-background-color: transparent;">
         <Button fx:id="BackButton" mnemonicParsing="false" onAction="#BackButton" prefHeight="31.0" prefWidth="117.0" style="-fx-background-color: linear-gradient(#7ed56f, #28b485); -fx-padding: 10px 20px; -fx-border-radius: 5px;" text="Back">
            <font>
               <Font name="Arial Black" size="15.0" />
            </font>
         </Button>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="80" fillWidth="false">
         <HBox spacing="10" alignment="CENTER_LEFT">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 25px;" text="Choose the number of players:" />
            <ComboBox fx:id="PlayersNum" prefWidth="150.0" style="-fx-background-color: linear-gradient(#7ed56f, #28b485);" />
         </HBox>
         <HBox spacing="10" alignment="CENTER_LEFT">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 25px;" text="Choose the Game's difficulty:" />
            <ComboBox fx:id="SelectDifficulty" prefWidth="150.0" style="-fx-background-color: linear-gradient(#7ed56f, #28b485);" />
         </HBox>
         <Button fx:id="NextButton" mnemonicParsing="false" onAction="#SubmitChoices" prefHeight="68.0" prefWidth="163.0" style="-fx-background-radius: 30;-fx-text-fill: #ffffff;-fx-background-color: linear-gradient(#7ed56f, #28b485); -fx-padding: 10px 20px; -fx-border-radius: 5px;" text="Next">
            <font>
               <Font name="Corbel Bold" size="21.0" />
            </font>
         </Button>
      </VBox>
   </center>
</BorderPane>
