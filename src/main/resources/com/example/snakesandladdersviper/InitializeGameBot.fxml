<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="MainPane" prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.snakesandladdersviper.Controller.InitializeGameBotController" stylesheets="@../src/CssStyles/initializeGameStyle.css">
   <center>
      <VBox alignment="CENTER" spacing="20" styleClass="vbox-container">
         <Text text="Choose the number of bots" styleClass="text-large"/>
         <ComboBox fx:id="PlayersNum" prefWidth="150.0" styleClass="combo-box"/>

         <Text text="Choose the Game's difficulty" styleClass="text-large"/>
         <ComboBox fx:id="SelectDifficulty" prefWidth="150.0" styleClass="combo-box"/>

         <Button fx:id="NextButton" onAction="#SubmitChoices" text="Next" styleClass="button-large"/>
      </VBox>
   </center>
   <top>
      <Button fx:id="BackButton" onAction="#BackButton" text="Back" styleClass="button-back" layoutX="10" layoutY="10"/>
   </top>
</BorderPane>
