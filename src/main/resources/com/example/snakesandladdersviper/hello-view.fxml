<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.paint.*?>

<?import java.net.URL?>
<BorderPane fx:id="MainPane" prefHeight="800.0" prefWidth="800.0" styleClass="main-pane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.snakesandladdersviper.Controller.MainController">
    <stylesheets>
        <URL value="@../src/CssStyles/HelloPageStyle.css" />
    </stylesheets>
    <center>
        <VBox fx:id="vboxContainer" alignment="CENTER" spacing="30" styleClass="vbox-container">
            <children>
                <Text fx:id="titleLabel" text="Snakes And Ladders" styleClass="title-text"/>
                <Button fx:id="StartGameBtn" onAction="#StartGame" text="Start Game" styleClass="menu-button"/>
                <Button fx:id="GameHistoryBtn" text="Game History" styleClass="menu-button"/>
                <Button fx:id="QuestionManagementBtn" onAction="#onQuestionManagementBtnClicked" text="Question Management Wizard" styleClass="menu-button"/>
                <Button fx:id="InstructionsBtn" onAction="#InstructionsOfGame" text="Instructions" styleClass="menu-button"/>
            </children>
        </VBox>
    </center>
</BorderPane>
