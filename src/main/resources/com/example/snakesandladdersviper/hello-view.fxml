<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>

<BorderPane fx:id="MainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="800.0" style="-fx-background-color: #f0eee6;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.snakesandladdersviper.Controller.MainController">
    <center>
        <VBox fx:id="vboxContainer" alignment="CENTER" spacing="20" styleClass="root" stylesheets="@../src/CssStyles/HelloPageStyle.css">
            <children>
                <Text fx:id="titleLabel" strokeType="OUTSIDE" strokeWidth="0.0" text="Snakes And Ladders">
                    <font>
                        <Font name="Arial" size="48.0" />
                    </font>
                    <fill>
                        <LinearGradient endX="0.5" endY="1.0" startX="0.5" startY="0.0">
                            <stops>
                                <Stop color="#2e4a8e" offset="0.0" />
                                <Stop color="#00aa00" offset="1.0" />
                            </stops>
                        </LinearGradient>
                    </fill>
                </Text>
                <Button fx:id="StartGameBtn" mnemonicParsing="false" onAction="#StartGame" prefHeight="68.0" prefWidth="233.0" style="-fx-background-radius: 30; -fx-background-color: linear-gradient(#7ed56f, #28b485); -fx-text-fill: #ffffff; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 10, 0, 0, 0);" text="Start Game" />
                <Button fx:id="GameHistoryBtn" mnemonicParsing="false" prefHeight="68.0" prefWidth="233.0" style="-fx-background-radius: 30; -fx-background-color: linear-gradient(#7ed56f, #28b485); -fx-text-fill: #ffffff; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 10, 0, 0, 0);" text="Game History" />
                <Button fx:id="QuestionManagementBtn" mnemonicParsing="false" onAction="#onQuestionManagementBtnClicked" prefHeight="68.0" prefWidth="233.0" style="-fx-background-radius: 30; -fx-background-color: linear-gradient(#7ed56f, #28b485); -fx-text-fill: #ffffff; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 10, 0, 0, 0);" text="Question Management Wizard" />
                <Button fx:id="InstructionsBtn" mnemonicParsing="false" onAction="#InstructionsOfGame" prefHeight="68.0" prefWidth="233.0" style="-fx-background-radius: 30; -fx-background-color: linear-gradient(#7ed56f, #28b485); -fx-text-fill: #ffffff; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 10, 0, 0, 0);" text="Instructions" />
            </children>
        </VBox>
    </center>
</BorderPane>
