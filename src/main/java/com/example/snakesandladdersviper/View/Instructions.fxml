<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<VBox fx:id="InstructionsContainer" alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Text text="Snakes and Ladders Instructions" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-underline: true;" />
        <Text text="Objective:" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        <Text text="Navigate from the start (square 1) to the finish (square 100), climbing ladders and avoiding snakes." wrappingWidth="700.0" />
        <Text text="Game Board Complexity:" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        <Text text="The complexity of the game board depends on the difficulty level chosen:" wrappingWidth="700.0" />
        <Text text="• Easy: 7x7 board with 49 squares." />
        <Text text="• Medium: 10x10 board with 100 squares." />
        <Text text="• Hard: 13x13 board with 169 squares." />
        <Text text="Ladders and Snakes:" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        <Text text="Ladders will help players advance more quickly, while snakes will slow down their progress." wrappingWidth="700.0" />
        <Text text="Different types of ladders and snakes will be placed on the board, which affect the gameplay differently." wrappingWidth="700.0" />
        <HBox alignment="CENTER" spacing="15.0">
            <Button text="Back" onAction="#handleBack" style="-fx-background-color:linear-gradient(#7ed56f, #28b485); -fx-text-fill: white; -fx-font-weight: bold;" />
            <Button text="Start Game" onAction="#handleStartGame" style="-fx-background-color:linear-gradient(#7ed56f, #28b485); -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </children>
</VBox>
