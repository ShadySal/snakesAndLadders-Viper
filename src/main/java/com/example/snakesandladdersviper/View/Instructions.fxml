<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<VBox fx:id="InstructionsContainer" alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #f0f4f7;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.snakesandladdersviper.Controller.MainController">
    <children>
        <!-- Game Title -->
        <Text style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #333333;" text="Snakes and Ladders Instructions" />

        <!-- Objective Section -->
        <VBox alignment="TOP_CENTER" spacing="10.0">
   <children>
               <Text style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-fill: #555555;" text="Objective:" />
               <Text style="-fx-font-size: 16px; -fx-fill: #666666;" text="Navigate from the start (square 1) to the finish (square 100), climbing ladders and avoiding snakes." wrappingWidth="600.0" />
   </children>
        </VBox>

        <!-- Game Board Complexity Section -->
        <VBox alignment="TOP_CENTER" spacing="5.0">
   <children>
               <Text style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-fill: #555555;" text="Game Board Complexity:" />
               <Text style="-fx-font-size: 16px; -fx-fill: #666666;" text="• Easy: 7x7 board with 49 squares." />
               <Text style="-fx-font-size: 16px; -fx-fill: #666666;" text="• Medium: 10x10 board with 100 squares." />
               <Text style="-fx-font-size: 16px; -fx-fill: #666666;" text="• Hard: 13x13 board with 169 squares." />
   </children>
        </VBox>

        <!-- Ladders and Snakes Section -->
        <VBox alignment="TOP_CENTER" spacing="10.0">
   <children>
               <Text style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-fill: #555555;" text="Ladders and Snakes:" />
               <Text style="-fx-font-size: 16px; -fx-fill: #666666;" text="Ladders will help players advance more quickly, while snakes will slow down their progress." wrappingWidth="600.0" />
               <Text style="-fx-font-size: 16px; -fx-fill: #666666;" text="Different types of ladders and snakes will be placed on the board, which affect the gameplay differently." wrappingWidth="600.0" />
   </children>
        </VBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="20.0">
   <children>
            <Button fx:id="BackButton" defaultButton="true" mnemonicParsing="false" onAction="#BackButton" prefHeight="43.0" prefWidth="85.0" style="-fx-background-color: #4e8d7c; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-text-fill: white; -fx-font-weight: bold;" text="Back" textAlignment="CENTER">
               <font>
                  <Font name="Arial Black" size="15.0" />
               </font>
            </Button>
            <Button fx:id="StartGameBtn" mnemonicParsing="false" onAction="#StartGame" prefHeight="46.0" prefWidth="149.0" style="-fx-background-color: #4e8d7c; -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-padding: 10px 20px;" text="Start Game" />
   </children>
        </HBox>
    </children>
</VBox>
